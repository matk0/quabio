                <dt class="text-sm font-medium text-gray-500 truncate">Celkovo spr√°v</dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@total_messages) %></dd>
              </dl>
            </div>
          </div>
