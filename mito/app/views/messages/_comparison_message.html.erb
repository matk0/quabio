<div class="comparison-container space-y-4" id="comparison_<%= SecureRandom.uuid %>">
  <!-- Admin comparison responses -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <% comparison_data['responses'].each_with_index do |variant_response, index| %>
      <div class="comparison-variant">
        <!-- Variant Header -->
        <div class="bg-emerald-50 border border-emerald-200 rounded-t-md px-4 py-2">
          <div class="flex items-center justify-between">
            <h4 class="text-sm font-semibold text-emerald-800">
              üß¨ Mi≈•o - <%= variant_response['variant_name'] %>
            </h4>
            <span class="text-xs text-emerald-600">
              <%= sprintf("%.2f", variant_response['processing_time']) %>s
            </span>
          </div>
        </div>
        
        <!-- Variant Response -->
        <div class="bg-white border-l border-r border-b border-emerald-200 rounded-b-md px-4 py-3">
          <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= variant_response['response'] %></p>
          
          <!-- Sources if available -->
          <% if variant_response['sources']&.any? %>
            <div class="mt-3 pt-3 border-t border-gray-100">
              <p class="text-xs font-medium text-gray-600 mb-2">Zdroje:</p>
              <div class="space-y-1">
                <% variant_response['sources'].first(3).each do |source| %>
                  <div class="text-xs text-gray-500">
                    ‚Ä¢ <%= source['title'] %> (<%= sprintf("%.1f", source['relevance_score']) %>)
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-xs text-gray-500 mt-2">
            <%= Time.current.strftime("%H:%M") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Performance Comparison Summary -->
  <div class="bg-gray-50 border border-gray-200 rounded-md p-3">
    <div class="text-xs text-gray-600">
      <strong>Porovnanie v√Ωkonu:</strong>
      <% comparison_data['responses'].each_with_index do |variant_response, index| %>
        <%= variant_response['variant_name'] %>: <%= sprintf("%.2f", variant_response['processing_time']) %>s<%= index < comparison_data['responses'].length - 1 ? ' | ' : '' %>
      <% end %>
    </div>
  </div>
</div>