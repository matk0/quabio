<div class="<%= user_signed_in? ? 'flex' : 'block' %> chat-container">
  <!-- Sidebar (only for authenticated users) -->
  <% if user_signed_in? %>
    <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
      <!-- Sidebar Header -->
      <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Konverzácie</h2>
          <%= link_to root_path, 
              class: "bg-emerald-600 hover:bg-emerald-700 text-white px-3 py-2 rounded-md text-sm font-medium" do %>
            + Nová konverzácia
          <% end %>
        </div>
      </div>

      <!-- Chat List -->
      <div class="flex-1 overflow-y-auto">
        <% if @user_chats.any? %>
          <% @user_chats.each do |user_chat| %>
            <div class="border-b border-gray-100">
              <%= link_to chat_path(user_chat), 
                  class: "block p-4 hover:bg-gray-50 #{'bg-emerald-50 border-r-2 border-emerald-500' if @chat == user_chat}" do %>
                <div class="flex justify-between items-start">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">
                      <%= user_chat.display_title %>
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= time_ago_in_words(user_chat.last_message_at) %> ago
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="p-4 text-center text-gray-500">
            <p class="text-sm">Žiadne konverzácie</p>
            <p class="text-xs mt-1">Začnite novú konverzáciu!</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col">
    <% if @chat %>
      <!-- Chat Header -->
      <div class="bg-white border-b border-gray-200 p-4">
        <h1 class="text-lg font-semibold text-gray-900">
          <%= @chat.display_title %>
        </h1>
        <p class="text-sm text-gray-500">
          Slovenský zdravotný asistent
        </p>
      </div>

      <!-- Messages Area -->
      <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages-container">
        <%= turbo_frame_tag "messages" do %>
          <% if @messages.any? %>
            <% @messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          <% else %>
            <div class="text-center text-gray-500 py-8">
              <div class="text-4xl mb-4">🧬</div>
              <h3 class="text-lg font-medium mb-2">Vitajte v Miťo!</h3>
              <p class="text-sm">Váš slovenský asistent pre zdravie, epigenetiku a kvantovú biológiu.</p>
              <p class="text-xs mt-2">Začnite konverzáciu položením otázky.</p>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Message Input -->
      <div class="bg-white border-t border-gray-200 p-4" id="new_message">
        <% if user_signed_in? %>
          <%= form_with model: [@chat, @message], local: false, id: "new_message", 
              data: { controller: "chat-input", chat_input_form_target: "form" } do |form| %>
            <div class="flex space-x-3">
              <div class="flex-1">
                <%= form.text_area :content, 
                    class: "h-full w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 resize-none",
                    rows: 2,
                    placeholder: "Napíšte svoju otázku o zdraví... (Enter na odoslanie, Shift+Enter pre nový riadok)",
                    required: true,
                    data: { 
                      chat_input_target: "textarea",
                      action: "keydown->chat-input#keydown input->chat-input#input"
                    } %>
              </div>
              <div class="flex items-stretch">
                <%= form.submit "Odoslať", 
                    class: "bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 h-full flex items-center" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= form_with model: @message, url: anonymous_messages_path, local: false, id: "new_message",
              data: { controller: "chat-input", chat_input_form_target: "form" } do |form| %>
            <div class="flex space-x-3">
              <div class="flex-1">
                <%= form.text_area :content, 
                    class: "h-full w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 resize-none",
                    rows: 2,
                    placeholder: "Napíšte svoju otázku o zdraví... (Enter na odoslanie, Shift+Enter pre nový riadok)",
                    required: true,
                    data: { 
                      chat_input_target: "textarea",
                      action: "keydown->chat-input#keydown input->chat-input#input"
                    } %>
              </div>
              <div class="flex items-stretch">
                <%= form.submit "Odoslať", 
                    class: "bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 h-full flex items-center" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- No Chat Selected -->
      <div class="flex-1 flex items-center justify-center bg-gray-50">
        <div class="text-center text-gray-500">
          <div class="text-6xl mb-4">🧬</div>
          <h2 class="text-2xl font-semibold mb-4">Miťo</h2>
          <p class="text-lg mb-2">Slovenský zdravotný asistent</p>
          <p class="text-sm">Špecializovaný na zdravie, epigenetiku a kvantovú biológiu</p>
          
          <%= link_to root_path, 
              class: "mt-6 inline-block bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-md font-medium" do %>
            Začať novú konverzáciu
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  // Auto-scroll to bottom of messages
  document.addEventListener('turbo:frame-load', function() {
    const container = document.getElementById('messages-container');
    if (container) {
      container.scrollTop = container.scrollHeight;
    }
  });
  
  // Scroll to bottom on page load
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('messages-container');
    if (container) {
      container.scrollTop = container.scrollHeight;
    }
  });
</script>
