<div class="<%= user_signed_in? ? 'flex' : 'block' %> chat-container">
  <!-- Sidebar (only for authenticated users) -->
  <% if user_signed_in? %>
    <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
      <!-- Sidebar Header -->
      <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Konverz치cie</h2>
          <%= link_to chats_path, 
              data: { "turbo-method": :post },
              class: "bg-emerald-600 hover:bg-emerald-700 text-white px-3 py-2 rounded-md text-sm font-medium" do %>
            + Nov치 konverz치cia
          <% end %>
        </div>
      </div>

      <!-- Chat List -->
      <div class="flex-1 overflow-y-auto">
        <% if @user_chats.any? %>
          <% @user_chats.each do |user_chat| %>
            <div class="border-b border-gray-100 group relative">
              <%= link_to chat_path(user_chat), 
                  class: "block p-4 hover:bg-gray-50 #{'bg-emerald-50 border-r-2 border-emerald-500' if @chat == user_chat}" do %>
                <div class="flex justify-between items-start">
                  <div class="flex-1 min-w-0 pr-8">
                    <p class="text-sm font-medium text-gray-900 truncate">
                      <%= user_chat.display_title %>
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= time_ago_in_words(user_chat.last_message_at) %> ago
                    </p>
                  </div>
                </div>
              <% end %>
              <!-- Delete button -->
              <%= link_to chat_path(user_chat), 
                  method: :delete,
                  data: { 
                    "turbo-method": :delete,
                    "turbo-confirm": "Naozaj chcete odstr치ni콘 t칰to konverz치ciu?"
                  },
                  class: "absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-200 p-1 rounded hover:bg-red-100 text-red-600 hover:text-red-800",
                  title: "Odstr치ni콘 konverz치ciu" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="p-4 text-center text-gray-500">
            <p class="text-sm">콯iadne konverz치cie</p>
            <p class="text-xs mt-1">Za캜nite nov칰 konverz치ciu!</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col" 
       data-controller="chat"
       data-chat-chat-id-value="<%= @chat&.id %>"
       data-chat-is-anonymous-value="<%= user_signed_in? ? 'false' : 'true' %>"
       data-chat-current-user-email-value="<%= current_user&.email %>"
       data-chat-is-admin-value="<%= current_user&.admin? || false %>">
    <% if @chat %>
      <!-- Chat Header -->
      <div class="bg-white border-b border-gray-200 p-4">
        <h1 class="text-lg font-semibold text-gray-900">
          <%= @chat.display_title %>
        </h1>
        <p class="text-sm text-gray-500">
          Slovensk칳 zdravotn칳 asistent
        </p>
      </div>

      <!-- Messages Area -->
      <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages-container" 
           data-chat-target="messagesContainer">
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <%= render 'messages/message', message: message %>
          <% end %>
        <% else %>
          <div class="text-center text-gray-500 py-8">
            <div class="text-4xl mb-4">游빏</div>
            <h3 class="text-lg font-medium mb-2">Vitajte v Mi콘o!</h3>
            <p class="text-sm">V치코 slovensk칳 asistent pre zdravie, epigenetiku a kvantov칰 biol칩giu.</p>
            <p class="text-xs mt-2">Za캜nite konverz치ciu polo쬰n칤m ot치zky.</p>
          </div>
        <% end %>
      </div>

      <!-- Message Input -->
      <div class="bg-white border-t border-gray-200 p-4" id="new_message">
        <% if user_signed_in? %>
          <form data-chat-target="form" data-action="submit->chat#submitMessage" class="chat-form">
            <div class="flex space-x-3">
              <div class="flex-1">
                <textarea name="message[content]" 
                    data-chat-target="textarea"
                    class="h-full w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 resize-none"
                    rows="2"
                    placeholder="Nap칤코te svoju ot치zku o zdrav칤... (Enter na odoslanie, Shift+Enter pre nov칳 riadok)"
                    required></textarea>
              </div>
              <div class="flex items-stretch">
                <button type="submit" 
                    data-chat-target="submitButton"
                    class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 h-full flex items-center">
                  Odosla콘
                </button>
              </div>
            </div>
          </form>
        <% else %>
          <form data-chat-target="form" data-action="submit->chat#submitMessage" class="chat-form">
            <div class="flex space-x-3">
              <div class="flex-1">
                <textarea name="anonymous_message[content]" 
                    data-chat-target="textarea"
                    class="h-full w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 resize-none"
                    rows="2"
                    placeholder="Nap칤코te svoju ot치zku o zdrav칤... (Enter na odoslanie, Shift+Enter pre nov칳 riadok)"
                    required></textarea>
              </div>
              <div class="flex items-stretch">
                <button type="submit" 
                    data-chat-target="submitButton"
                    class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 h-full flex items-center">
                  Odosla콘
                </button>
              </div>
            </div>
          </form>
        <% end %>
      </div>
    <% else %>
      <!-- No Chat Selected -->
      <div class="flex-1 flex items-center justify-center bg-gray-50">
        <div class="text-center text-gray-500">
          <div class="text-6xl mb-4">游빏</div>
          <h2 class="text-2xl font-semibold mb-4">Mi콘o</h2>
          <p class="text-lg mb-2">Slovensk칳 zdravotn칳 asistent</p>
          <p class="text-sm">맗ecializovan칳 na zdravie, epigenetiku a kvantov칰 biol칩giu</p>
          
          <%= link_to root_path, 
              class: "mt-6 inline-block bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-md font-medium" do %>
            Za캜a콘 nov칰 konverz치ciu
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

